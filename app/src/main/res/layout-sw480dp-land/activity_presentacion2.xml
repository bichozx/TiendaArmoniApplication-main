<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoarmonia3"
    android:textAlignment="center"
    tools:context=".PresentacionActivity2">

    <Button
        android:id="@+id/btinicio"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:layout_marginStart="404dp"
        android:fontFamily="@font/roboto_slab_light"
        android:hint="@string/inicio"
        android:textColorHint="#0E0E0E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <Button
        android:id="@+id/btregistro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:layout_marginEnd="416dp"
        android:fontFamily="@font/roboto_slab_light"
        android:hint="@string/registro"
        android:textColorHint="#0E0E0E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />
</androidx.constraintlayout.widget.ConstraintLayout>